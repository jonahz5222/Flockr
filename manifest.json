{
  "manifest_version": 2,
  "name": "TwitterDev Collections Extension v0.0.2",
  "description": "Chrome extension to help users curate tweets into Twitter Collections directly from Twitter.com.",
  "version": "0.0.2",
  "options_page": "page.html?page=settings",

  "permissions": [
    "clipboardWrite",
    "clipboardRead",
    "tabs",
    "contextMenus",
    "storage",
    "http://*/*",
    "https://*/*"
  ],

  "browser_action": {
    "default_icon": "img/bird.png",
    "default_popup": "page.html"
  },

  "icons": { "16": "img/bird.png",
             "48": "img/bird.png",
             "128": "img/bird.png" },

  "background": {
  	"scripts": [
	    "js/lib/jquery-1.10.1.min.js",
	    "js/lib/bootstrap.js",
	    "js/lib/async.js",
	    "js/lib/codebird.js",
	    "js/common.js",
	    "js/store.js",
	    "js/menu.js",
	    "js/background.js"
  	],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "all_frames": true,
      "run_at": "document_idle", 
      "js": [
      	"js/lib/jquery-1.10.1.min.js",
	    "js/lib/async.js",
      	"js/common.js", 
      	"js/contentscript.js"
  	  ],
      "css": [
      	"css/contentscript.css"
  	  ]
    }
  ],
  
  "web_accessible_resources": ["page.html"]
}
